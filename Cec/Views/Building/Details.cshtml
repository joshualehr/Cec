@model Cec.ViewModels.BuildingDetailsViewModel

@{
    ViewBag.Title = "Building";
}

<p>
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.Project + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId })
</p>
<i class="h2">Building @Model.Building</i>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.BuildingId })
</p>
<hr />
<div>
    <dl class="dl-horizontal list-group">
        <dt class="list-group-item-heading">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="list-group-item-text">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="list-group-item-heading">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="list-group-item-text">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="list-group-item-heading">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="list-group-item-text">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="list-group-item-heading">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="list-group-item-text">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="list-group-item-heading">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="list-group-item-text">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    </dl>
    <h4>Total @Html.ActionLink("Areas", "Index", "Area", new { id = Model.BuildingId }, null): @Html.DisplayFor(model => model.AreaCount)</h4>
    <table class="table-bordered">
        <tr>
            <th class="text-left col-sm-2">Status</th>
            <th class="text-center col-sm-2">Percent</th>
            <th class="text-center col-sm-2">Count</th>
            <th class="text-center col-sm-4">Areas</th>
        </tr>
        @Html.DisplayFor(model => model.Statuses)
    </table>
</div>
