@model Cec.ViewModels.BuildingDetailsViewModel

@{
    ViewBag.Title = "Building";
}

<div class="breadcrumb">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.Project + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId })
</div>
<div class="row">
    <div class="col-sm-6 col-xs-12">
        <h2>Building @Model.Building</h2>
        <div class="btn-group">
            @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Areas", "Index", "Area", new { id = Model.BuildingId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Copy", "Copy", new { id = Model.BuildingId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.BuildingId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="col-sm-6">
        <dl class="dl-horizontal list-group">
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
        </dl>
    </div>
</div>
<h4>Total @Html.ActionLink("Areas", "Index", "Area", new { id = Model.BuildingId }, null): @Html.DisplayFor(model => model.AreaCount)</h4>
<table class="table-bordered">
    <tr class="row">
        <th class="text-left col-xs-2">Status</th>
        <th class="text-center col-xs-2">Percent</th>
        <th class="text-center col-xs-2">Count</th>
        <th class="text-center col-xs-6">Areas</th>
    </tr>
    @Html.DisplayFor(model => model.Statuses)
</table>
