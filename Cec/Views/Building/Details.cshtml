@model Cec.ViewModels.BuildingDetailsViewModel

@{
    ViewBag.Title = "Building " + Model.Building;
}

<h2>Building @Model.Building</h2>
<div class="row">
    <div class="text-left col-xs-6 col-sm-3">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId }, new { @class = "btn btn-default" })
            @Html.ActionLink("Areas", "Index", "Area", new { id = Model.BuildingId }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <div class="text-right col-xs-6 col-sm-3 col-sm-push-6">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink("Copy", "Copy", new { id = Model.BuildingId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.BuildingId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-xs-12 col-sm-6 col-sm-pull-3">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
        </dl>
    </div>
</div>
<h4>Total Areas: @Html.DisplayFor(model => model.AreaCount)</h4>
<table class="table-bordered table-striped">
    <tr class="row">
        <th class="text-left col-xs-4 col-sm-2">Status</th>
        <th class="text-center col-xs-3 col-sm-2">Percent</th>
        <th class="text-center col-xs-5 col-sm-8">Areas</th>
    </tr>
    @Html.DisplayFor(model => model.Statuses)
</table>
<div class="breadcrumb text-center">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.Project + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId })
</div>
