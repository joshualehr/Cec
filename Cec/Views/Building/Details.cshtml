@model Cec.ViewModels.BuildingDetailsViewModel

@{
    ViewBag.Title = "Building";
}

<p class="nav">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.Project + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Buildings", "Index", new { id = Model.ProjectId })
</p>
<div class="column-two">
    <ul class="list-unstyled">
        <li class="column-break-avoid">
            <h2>Building @Model.Building</h2>
            <div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.BuildingId }, new { @class = "btn btn-default" })
            </div>
        </li>
        <li class="column-break-avoid">
            <br />
            <dl class="dl-horizontal list-group">
                <dt class="list-group-item-heading">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="list-group-item-text">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="list-group-item-heading">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="list-group-item-text">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="list-group-item-heading">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="list-group-item-text">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="list-group-item-heading">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="list-group-item-text">
                    @Html.DisplayFor(model => model.State)
                </dd>
                <dt class="list-group-item-heading">
                    @Html.DisplayNameFor(model => model.PostalCode)
                </dt>
                <dd class="list-group-item-text">
                    @Html.DisplayFor(model => model.PostalCode)
                </dd>
            </dl>
        </li>
    </ul>
</div>
<h4>Total @Html.ActionLink("Areas", "Index", "Area", new { id = Model.BuildingId }, null): @Html.DisplayFor(model => model.AreaCount)</h4>
<table class="table-bordered">
    <tr>
        <th class="text-left col-sm-2">Status</th>
        <th class="text-center col-sm-2">Percent</th>
        <th class="text-center col-sm-2">Count</th>
        <th class="text-center col-sm-4">Areas</th>
    </tr>
    @Html.DisplayFor(model => model.Statuses)
</table>
