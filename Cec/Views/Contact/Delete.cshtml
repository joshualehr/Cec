@model Cec.Models.Contact

@{
    ViewBag.Title = "Delete Contact";
}

<br />
<p>
    @Html.ActionLink("Contacts", "Index")
</p>
<h2 style="color:red">Are you sure you want to delete this contact?</h2>
<h3>@Html.ActionLink("Cancel", "Details", new { id = Model.ContactID })</h3>
<p class="has-error">@ViewBag.ErrorMessage</p>
<hr />
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <br />
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
