@model Cec.ViewModels.ContactDetailsViewModel

@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <div class="text-left col-xs-6">
        <h2>@Model.FullName</h2>
    </div>
    <br />
    <div class="text-right col-xs-6">
        <div class="btn-group">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ContactId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.ContactId }, new { @class = "btn btn-default", data_post = "Are you sure you want to delete this contact?" })
        </div>
    </div>
    <div class="clearfix visible-xs"></div>
</div>
<div class="row">
    <div class="col-xs-12 col-xs-push-3">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Company)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Company)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Trade)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Trade)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @(Model.Phone.IsEmpty() ? Html.DisplayFor(model => model.Phone) : MvcHtmlString.Create(String.Format("{0:(###) ###-####}", long.Parse(Model.Phone))))
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>
</div>
