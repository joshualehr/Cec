@model Cec.ViewModels.ContactDetailsViewModel

@{
    ViewBag.Title = "Contact";
}

<br />
<p>
    @Html.ActionLink("Contacts", "Index")
</p>
<h2>@Model.FullName</h2>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ContactId }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ContactId })
</p>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Trade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Trade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @(Model.Phone.IsEmpty() ? Html.DisplayFor(model => model.Phone) : MvcHtmlString.Create(String.Format("{0:(###) ###-####}", long.Parse(Model.Phone))))
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Chat)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Chat)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Website)
        </dd>
    </dl>
</div>
