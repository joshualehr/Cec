@model IEnumerable<Cec.ViewModels.ProjectIndexViewModel>

@{
    ViewBag.Title = "Project";
}

<p>
    @Html.ActionLink("Materials", "Index", "Material")
</p>
<h2>Projects</h2>
<table class="table table-hover">
    <tr class="row">
        <th class="col-lg-2 text-left">
            @Html.DisplayNameFor(model => model.First().Project)
        </th>
        <th class="col-lg-10 text-center">
            Actions
        </th>
    </tr>
    @foreach (var item in Model) {
        <tr class="row">
            <td class="col-lg-2 text-left">
                @Html.ActionLink(item.Project, "Details", new { id = item.ProjectId }, new { @class = "" })
            </td>
            <td class="col-lg-10 text-center">
                <div class="btn-group">
                    @Html.ActionLink("Buildings", "Index", "Building", new { id = item.ProjectId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Models", "Index", "Model", new { id = item.ProjectId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    }
    <tr class="row">
        <td class="col-lg-2 text-left">
            @Html.ActionLink("Create a New Project", "Create")
        </td>
        <td class="col-lg-10 text-center">
            &nbsp;
        </td>
    </tr>
</table>
