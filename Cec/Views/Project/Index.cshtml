@model IEnumerable<Cec.ViewModels.ProjectIndexViewModel>

@{
    ViewBag.Title = "Projects";
}

<div class="row">
    <div class="text-left col-xs-6">
        <h2>Projects</h2>
    </div>
    <div class="text-right col-xs-6">
        <br />
        @Html.ActionLink("New Project", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
<br />
<table class="table table-hover">
    <tr class="row">
        <th class="col-xs-3 col-sm-6 text-left">
            @Html.DisplayNameFor(model => model.First().Project)
        </th>
        <th class="col-xs-9 col-sm-6 text-right">
            Actions
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="row">
            <td class="col-xs-3 col-sm-6 text-left">
                @Html.ActionLink(item.Project, "Details", new { id = item.ProjectId }, null)
            </td>
            <td class="col-xs-9 col-sm-6 text-right">
                <div class="hidden-xs">
                    <div class="btn-group">
                        @Html.ActionLink("Buildings", "Index", "Building", new { id = item.ProjectId }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Models", "Index", "Model", new { id = item.ProjectId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Contacts", "IndexByProject", "Contact", new { id = item.ProjectId }, new { @class = "btn btn-success" })
                    </div>
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new { @class = "btn btn-default", data_post = "Are you sure you want to delete the " + item.Project + " project?" })
                    </div>
                </div>
                <div class="hidden-sm hidden-md hidden-lg">
                    <div class="btn-group btn-group-vertical">
                        @Html.ActionLink("Buildings", "Index", "Building", new { id = item.ProjectId }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Models", "Index", "Model", new { id = item.ProjectId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Contacts", "IndexByProject", "Contact", new { id = item.ProjectId }, new { @class = "btn btn-success" })
                    </div>
                    <div class="btn-group btn-group-vertical">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new { @class = "btn btn-default", data_post = "Are you sure you want to delete the " + item.Project + " project?" })
                    </div>
                </div>
            </td>
        </tr>
    }
</table>
