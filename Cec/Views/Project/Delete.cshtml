@model Cec.ViewModels.ProjectDeleteViewModel

@{
    ViewBag.Title = "Project";
}

<h2>Delete Project</h2>
<div class="btn-group btn-group">
    @Html.ActionLink("Projects", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink(Model.Designation + " Project", "Details", new { id = Model.ProjectId }, new { @class = "btn btn-primary" })
</div>
<h3 class="text-danger">Are you sure you want to delete the @Model.Designation Project?</h3>
<br />
<br />
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.Designation)

        <div class="btn-group">
            @Html.ActionLink("Cancel", "Details", new { id = Model.ProjectId }, new { @class = "btn btn-primary" })
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
        <br />
        <br />
    }
</div>
