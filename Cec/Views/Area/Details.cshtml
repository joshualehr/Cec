@model Cec.ViewModels.AreaDetailsViewModel

@{
    ViewBag.Title = "Area " + Model.AreaDesignation;
}

<h2>Area @Model.AreaDesignation</h2>
<div class="row">
    <div class="text-left col-xs-6 col-sm-3">
        <div class="btn-group-vertical">
            @Html.ActionLink("Areas", "Index", new { id = Model.BuildingId }, new { @class = "btn btn-default" })
            @Html.ActionLink("To Dos", "Index", "ToDo", new { id = Model.AreaId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Material", "Index", "AreaMaterial", new { id = Model.AreaId }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <div class="text-right col-xs-6 col-sm-3 col-sm-push-6">
        <div class="btn-group-vertical">
            @Html.ActionLink("Copy", "Copy", new { id = Model.AreaId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.AreaId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.AreaId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-xs-12 col-sm-6 col-sm-pull-3">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BuildingDesignation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BuildingDesignation)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ModelDesignation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ModelDesignation)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StatusChanged)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StatusChanged, "ShortDate")
            </dd>
        </dl>
    </div>
</div>
<div class="breadcrumb text-center">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.ProjectDesignation + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Buildings", "Index", "Building", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Building " + Model.BuildingDesignation, "Details", "Building", new { id = Model.BuildingId }, null) >
    @Html.ActionLink("Areas", "Index", new { id = Model.BuildingId })
</div>
