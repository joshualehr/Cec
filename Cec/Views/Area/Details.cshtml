@model Cec.ViewModels.AreaDetailsViewModel

@{
    ViewBag.Title = "Area " + Model.AreaDesignation;
}

<div class="row">
    <div class="col-sm-6 col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h2>Area @Model.AreaDesignation</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                @Html.ActionLink("Back to Areas", "Index", new { id = Model.BuildingId }, new { @class = "btn btn-default" })
            </div>
            <div class="col-xs-4">
                <div class="btn-group btn-group-vertical">
                    @Html.ActionLink("Area's Material", "Index", "AreaMaterial", new { id = Model.AreaId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Copy", "Copy", new { id = Model.AreaId }, new { @class = "btn btn-success" })
                </div>
            </div>
            <div class="col-xs-4">
                <div class="btn-group btn-group-vertical">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.AreaId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = Model.AreaId }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <dl class="dl-horizontal list-group">
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.BuildingDesignation)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.BuildingDesignation)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.ModelDesignation)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.ModelDesignation)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="list-group-item-heading">
                @Html.DisplayNameFor(model => model.StatusChanged)
            </dt>
            <dd class="list-group-item-text">
                @Html.DisplayFor(model => model.StatusChanged, "ShortDate")
            </dd>
        </dl>
    </div>
</div>
<div class="breadcrumb text-center">
@Html.ActionLink("Projects", "Index", "Project") >
@Html.ActionLink(Model.ProjectDesignation + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
@Html.ActionLink("Buildings", "Index", "Building", new { id = Model.ProjectId }, null) >
@Html.ActionLink("Building " + Model.BuildingDesignation, "Details", "Building", new { id = Model.BuildingId }, null) >
@Html.ActionLink("Areas", "Index", new { id = Model.BuildingId })
</div>
