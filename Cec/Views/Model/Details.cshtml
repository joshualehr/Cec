@model Cec.ViewModels.ModelDetailsViewModel

@{
    ViewBag.Title = "Model " + Model.ModelName;
}

<h2>Model @Model.ModelName</h2>
<div class="row">
    <div class="text-left col-xs-6 col-sm-3">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink("Models", "Index", new { id = Model.ProjectId }, new { @class = "btn btn-default" })
            @Html.ActionLink("Model Material", "Index", "ModelMaterial", new { id = Model.ModelId }, new { @class = "btn btn-danger" })
        </div>
    </div>
    <div class="text-right col-xs-6 col-sm-3 col-sm-push-6">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink("Copy", "Copy", new { id = Model.ModelId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.ModelId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.ModelId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-xs-12 col-sm-6 col-sm-pull-3">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
</div>
<div class="breadcrumb text-center">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.ProjectName + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Models", "Index", new { id = Model.ProjectId })
</div>
