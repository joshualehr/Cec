@model Cec.ViewModels.ModelDetailsViewModel

@{
    ViewBag.Title = "Model " + Model.ModelName;
}

<br />
<p>
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.ProjectName + " Project", "Details", "Project", new { id = Model.ProjectId }, null) >
    @Html.ActionLink("Models", "Index", new { id = Model.ProjectId })
</p>
<h2>Model @Model.ModelName</h2>
<p class="h3">
    Go to
    @Html.ActionLink("Model Material", "Index", "ModelMaterial", new { id = Model.ModelId }, null)
</p>
<p>
    @Html.ActionLink("Copy", "Copy", new { id = Model.ModelId }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ModelId }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ModelId })
</p>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
