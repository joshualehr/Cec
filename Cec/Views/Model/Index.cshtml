@model Cec.ViewModels.ModelIndexViewModel

@{
    ViewBag.Title = "Models";
}

<h2>Models</h2>
<div class="row">
    <div class="text-left col-xs-6 col-sm-3">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink(Model.ProjectName + " Project", "Details", "Project", new { id = Model.ProjectId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="text-right col-xs-6 col-sm-3 col-sm-push-6">
        <div class="btn-group btn-group-vertical">
            @Html.ActionLink("New Model", "Create", new { id = Model.ProjectId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<br />
<table class="table table-hover">
    <tr class="row">
        <th class="col-xs-3 col-lg-6 text-left">
            Model
        </th>
        <th class="col-xs-9 col-lg-6 text-center">
            Actions
        </th>
    </tr>
    @Html.DisplayFor(model => model.Models)
</table>
<div class="breadcrumb text-center">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(Model.ProjectName + " Project", "Details", "Project", new { id = Model.ProjectId }, null)
</div>
