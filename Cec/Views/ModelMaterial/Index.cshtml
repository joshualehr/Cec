@model IEnumerable<Cec.ViewModels.ModelMaterialIndexViewModel>

@{
    ViewBag.Title = "Material";
    var modelMaterial = Model.First();
}

<p class="nav">
    @Html.ActionLink("Projects", "Index", "Project") >
    @Html.ActionLink(modelMaterial.Project + " Project", "Details", "Project", new { id = modelMaterial.ProjectId }, null) >
    @Html.ActionLink("Models", "Index", "Model", new { id = modelMaterial.ProjectId }, null) >
    @Html.ActionLink("Model " + modelMaterial.Model, "Details", "Model", new { id = modelMaterial.ModelId }, null)
</p>
<h2>Material for Model @modelMaterial.Model</h2>
<p>
    @Html.ActionLink("Add Item", "Create", new { id = modelMaterial.ModelId }, new { @class = "btn btn-primary" })
</p>
<table class="table table-condensed">
    <tr>
        <th class="col-lg-5 text-left">
            @Html.DisplayNameFor(model => model.Material)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.RoughQuantity)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.FinishQuantity)
        </th>
        <th class="col-lg-2 text-center">
            @Html.DisplayNameFor(model => model.UnitOfMeasure)
        </th>
        <th class="col-lg-4 text-center">
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col-lg-3 text-left">
            @Html.ActionLink(item.Material, "Details", "Material", new { id = item.MaterialId }, null)
        </td>
        <td class="col-lg-1 text-center">
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td class="col-lg-1 text-center">
            @Html.DisplayFor(modelItem => item.RoughQuantity)
        </td>
        <td class="col-lg-1 text-center">
            @Html.DisplayFor(modelItem => item.FinishQuantity)
        </td>
        <td class="col-lg-2 text-center">
            @Html.DisplayFor(modelItem => item.UnitOfMeasure)
        </td>
        <td class="col-lg-4 text-center">
            <div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = item.ModelId, materialId = item.MaterialId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ModelId, materialId = item.MaterialId }, new { @class = "btn btn-default", data_post = "Are you sure you want to delete this material?" })
            </div>
        </td>
    </tr>
}
</table>
