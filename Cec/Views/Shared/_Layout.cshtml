<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title - Complete Electric</title>
        @Styles.Render("~/styles")
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index">
                        <img alt="Cec Logo" src="~/Content/Images/CEC Logo.png" height="45" width="60" class="img-responsive" style="padding-top: 5px; padding-left: 5px" />
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="glyphicon glyphicon-home"></i>
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("About", "Home")">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                About
                            </a>
                        </li>
                        @{if (User.IsInRole("isEmployee"))
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Contact")">
                                        <i class="glyphicon glyphicon-phone"></i>
                                        Contacts
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Project")">
                                        <i class="glyphicon glyphicon-star"></i>
                                        Projects
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Material")">
                                        <i class="glyphicon glyphicon-barcode"></i>
                                        Material
                                    </a>
                                </li>
                            }
                        }
                        @{if (User.IsInRole("canAdminister"))
                            {
                                <li>
                                    <a href="@Url.Action("Index", "User", new { Area = "Admin" })">
                                        <i class="glyphicon glyphicon-user"></i>
                                        Users
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Complete Electric and Communications, Inc.</p>
            </footer>
        </div>
        @Scripts.Render("~/javascripts")
        @RenderSection("scripts", required: false)
    </body>
</html>
