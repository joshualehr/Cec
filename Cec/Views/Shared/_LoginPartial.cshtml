@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Hello, @User.Identity.GetUserName() <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Details", "Profile")">
                    <i class="glyphicon glyphicon-pencil"></i>
                    Profile
                </a>
            </li>
            <li>
                <a href="@Url.Action("Manage", "Account")">
                    <i class="glyphicon glyphicon-cog"></i>
                    Manage
                </a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="glyphicon glyphicon-log-out"></i>
                    Log off
                </a>
            </li>
        </ul>
    </li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Register", "Account")" id="registerLink">
                <i class="glyphicon glyphicon-user"></i>
                Register
            </a>
        </li>
        <li>
            <a href="@Url.Action("Login", "Account")" id="loginLink">
                <i class="glyphicon glyphicon-log-in"></i>
                Login
            </a>
        </li>
    </ul>
}
