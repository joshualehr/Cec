@model Cec.ViewModels.AreaIndexItemViewModel
<tr class="row">
    <td class="col-xs-1 col-lg-3 text-left">
        @Html.CheckBoxFor(model => model.Selected)
    </td>
    <td class="col-xs-2 col-lg-3 text-center">
        @Html.ActionLink(Model.Area, "Details", new { id = Model.AreaId })
        @Html.HiddenFor(model => model.AreaId)
        @Html.HiddenFor(model => model.Area)
    </td>
    <td class="col-xs-9 col-lg-6 text-right">
        <div class="hidden-xs">
            <div class="btn-group">
                @Html.ActionLink("Material", "Index", "AreaMaterial", new { id = Model.AreaId }, new { @class = "btn btn-danger" })
                @Html.ActionLink("To Dos", "Index", "ToDo", new { id = Model.AreaId }, new { @class = "btn btn-warning" })
            </div>
            <div class="btn-group">
                @Html.ActionLink("Copy", "Copy", new { id = Model.AreaId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Edit", "Edit", new { id = Model.AreaId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.AreaId }, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="hidden-sm hidden-md hidden-lg">
            <div class="btn-group-vertical">
                @Html.ActionLink("Material", "Index", "AreaMaterial", new { id = Model.AreaId }, new { @class = "btn btn-danger" })
                @Html.ActionLink("To Dos", "Index", "ToDo", new { id = Model.AreaId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Copy", "Copy", new { id = Model.AreaId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Edit", "Edit", new { id = Model.AreaId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.AreaId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </td>
</tr>
