@model Cec.ViewModels.ModelIndexItemViewModel
<tr class="row">
    <td class="col-xs-3 col-lg-6 text-left">
        @Html.ActionLink(Model.ModelName, "Details", new { id = Model.ModelId })
    </td>
    <td class="col-xs-9 col-lg-6 text-center">
        <div class="hidden-xs">
            <div class="btn-group">
                @Html.ActionLink("Material", "Index", "ModelMaterial", new { id = Model.ModelId }, new { @class = "btn btn-danger" })
            </div>
            <div class="btn-group">
                @Html.ActionLink("Copy", "Copy", new { id = Model.ModelId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Edit", "Edit", new { id = Model.ModelId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.ModelId }, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="hidden-sm hidden-md hidden-lg">
            <div class="btn-group-vertical">
                @Html.ActionLink("Material", "Index", "ModelMaterial", new { id = Model.ModelId }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Copy", "Copy", new { id = Model.ModelId }, new { @class = "btn btn-success" })
            </div>
            <div class="btn-group-vertical">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ModelId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.ModelId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </td>
</tr>
