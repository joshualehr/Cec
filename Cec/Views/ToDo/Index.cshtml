@model IEnumerable<Cec.Models.ToDo>

@{
    ViewBag.Title = "To Dos";
    var area = Model.First().Area;
}

<h2>To Dos</h2>
<div class="row">
    <div class="text-left col-xs-6 col-sm-3">
        <div class="btn-group-vertical">
            @Html.ActionLink("Area " + area.Designation, "Details", "Building", new { id = area.AreaID }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="text-right col-xs-6 col-sm-3 col-sm-push-6">
        <div class="btn-group-vertical">
            @Html.ActionLink("New To Do", "Create", new { id = area.AreaID }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<br />
<table class="table table-striped">
    <tr class="row">
        <th class="col-xs-1 col-lg-3 text-left">
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th class="col-xs-3 text-center">
            @Html.DisplayNameFor(model => model.Heading)
        </th>
        <th class="col-xs-7 text-right">
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr class="row">
        <td class="col-xs-2 text-left">
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
        <td class="col-xs-3 text-center">
            @Html.ActionLink(item.Heading, "Details", new { id = item.ToDoID }, null)
        </td>
        <td class="col-xs-7 text-right">
            <div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = item.ToDoID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ToDoID }, new { @class = "btn btn-default" })
            </div>
        </td>
    </tr>
}

</table>
